#define _GNU_SOURCE
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>

int main() {
  char *line = NULL;
  size_t n = 0;

  printf("Enter program to run:\n");
  getline(&line, &n, stdin);

  pid_t pid = fork();

  line[strcspn(line, "\n")] = '\0';

  if (pid == 0) {
    execl(line, line, (char *)NULL);

  } 

  free(line);

  return 0;
}
